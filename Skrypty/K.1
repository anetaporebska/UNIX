#!/bin/bash

#Skrypt, ktory przyjmuje sciezke do katalogu i wypisuje nazwe i rozmiar
#w bajtach i czy wlasciciel ma uprawnienia do wykonania wszystkich plikow w 
#katalogu i podkatalogach

if [[ $# != 1 ]]; then
	echo "podano nieprawidlowa liczbe argumentwow"
fi

s=`find $1`

for i in $s; do
	if [[ -f $i ]]; then
		echo -n "$i"


	rozmiar=`du -b $i | awk '{print $1}'`
	echo -n "-$rozmiar"

		if [[ -x $i ]]; then
			echo -n "-x"
		else
			echo -n "- "

		fi

	fi

echo ""
done
